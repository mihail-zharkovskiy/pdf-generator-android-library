<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text_view_header">
        <item name="android:background">@drawable/background_stroke</item>
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_view">
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

</resources>